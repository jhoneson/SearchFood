<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="140dp"
       android:orientation="horizontal"
       android:background="@mipmap/baidu1">
    <EditText
        android:layout_width="140sp"
        android:layout_height="35sp"
        android:hint="送至-彩虹大厦"
        android:paddingLeft="20dp"
        android:background="@drawable/hotel_feed_advter_bg"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:layout_marginLeft="100dp"/>
    <android.support.v7.widget.Toolbar
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/toolbar1"
        android:layout_marginLeft="55dp"
        app:logo="@mipmap/non_catering_icon_search" />
   </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:rowCount="2"
        android:columnCount="5">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pager_view"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <ImageButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/waimai"
               android:id="@+id/scroll_imgBtn"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="外卖"
               android:textSize="14dp"
               android:id="@+id/scroll_txt"/>
        </LinearLayout>
  </GridLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="40sp"
             android:orientation="horizontal">
             <ImageView
                 android:layout_width="80dp"
                 android:layout_marginLeft="10dp"
                 android:layout_height="15dp"
                 android:layout_marginTop="10dp"
                 android:src="@drawable/head_line"/>
             <TextView
                 android:layout_width="220sp"
                 android:layout_height="24dp"
                 android:text="天气有点热，来一杯冰凉的奶茶吧。冰凉一夏"
                 android:singleLine="true"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="10dp"/>
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@mipmap/activity_big_image_no_after"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="15dp"/>
         </LinearLayout>
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="120sp"
             android:scaleType="fitXY"
             android:src="@drawable/x20160622185135"/>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
         <Spinner
             android:layout_width="0dp"
             android:layout_weight="2"
             android:layout_height="wrap_content"
             android:id="@+id/spinner1"/>
         <Spinner
             android:layout_width="0dp"
             android:layout_weight="2"
             android:layout_height="wrap_content"
             android:id="@+id/spinner2">
         </Spinner>
         <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="3"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1.5"
               android:layout_height="wrap_content"
               android:text="百度专送"
               android:layout_marginTop="10dp"
               android:textSize="14dp"/>
           <Switch
               android:layout_width="0dp"
               android:layout_weight="1.5"
               android:layout_marginRight="10dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"/>
         </LinearLayout>
       </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="95dp"
            android:src="@drawable/meituan_image1"
            android:id="@+id/list_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="味之源黄焖鸡米饭"
            android:textSize="18dp"
            android:id="@+id/list_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/list_img"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:src="@mipmap/l20160623094314"
            android:id="@+id/list_img2"
            android:layout_toRightOf="@id/list_img"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起送 ¥0|配送 ¥0  月送 686份"
            android:id="@+id/list_text1"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="160dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_img1"
                android:src="@mipmap/waimai_shoplist_item_icon_jian"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_txt1"
                android:textSize="12dp"
                android:text="新用户在线支付立减12元，使用百度钱包立减22元"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="125dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_img2"
                android:src="@mipmap/waimai_shoplist_item_icon_jian"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_txt2"
                android:textSize="12dp"
                android:text="在线支付满15元减2.5元，满25元减11元，满45元减15元"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
