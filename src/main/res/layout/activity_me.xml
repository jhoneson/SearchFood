<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/red"
        android:text="个人中心"
        android:gravity="center"
        android:textSize="20dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/red"
        android:src="@mipmap/tx20160623140259"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/red">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@color/red"
        android:layout_marginLeft="15dp"
        android:text="代金券"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginLeft="45dp"
            android:background="@color/red"
            android:text="收藏店铺"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginLeft="30dp"
            android:background="@color/red"
            android:text="余额"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/wallet_base_result_success"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="百度钱包"
            android:textSize="18dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常年支付返现1%，最高免单"
            android:textSize="13dp"
            android:textColor="@color/red"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/activity_big_image_no_after"
            android:layout_marginTop="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:src="@mipmap/ebpay_help_cvv"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="-2dp"
            android:layout_marginLeft="55dp"
            android:src="@mipmap/prompt_voucher"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="55dp"
            android:src="@mipmap/bd_wallet_my_bank_empty_pic"/>
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="-10dp"
            android:text="累计返现          卡券包              银行卡"
            android:textSize="18dp"/>
    <GridView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:id="@+id/grid_me">
    </GridView>
    <Button
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="给予评价"
        android:textSize="18dp"
        android:id="@+id/meBtn"
        android:background="@color/red"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">
        <Button
            android:layout_marginLeft="80dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/mypage_list_icon_call"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/red"
            android:text="客服   400-011-7777"/>
    </LinearLayout>
</LinearLayout>
